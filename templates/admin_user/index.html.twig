{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table table-dark font-martel text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                {# <th>Roles</th> #}
                {# <th>Password</th> #}
                <th>Pseudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="align-text-bottom">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                {# <td>{{ user.password }}</td> #}
                <td>{{ user.pseudo }}</td>
                <td>
                    <a class="font-passion" href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a class="font-passion" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-width-fixe btn btn-primary" href="{{ path('app_admin_user_new') }}">Create new</a>
{% endblock %}
