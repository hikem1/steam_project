{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_game_index') }}">back to list</a>
    <h1 class="mt-5">Game</h1>

    <table class="table table-dark text-light font-martel">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ game.genre }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ game.price }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ game.imageName }}</td>
            </tr>
        </tbody>
    </table>



    <a class="btn btn-width-fixe btn-primary" href="{{ path('app_admin_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
